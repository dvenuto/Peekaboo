doctype html
html(lang='en' ng-app="peekaboo")
    head
        base( href='/')
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
        meta(name='description', content='')
        meta(name='author', content='')
        link(rel='icon', href='../../favicon.ico')
        title Dashboard Template for Bootstrap
        // Bootstrap core CSS
        link(rel='stylesheet', href='/stylesheets/bootstrap/dist/css/bootstrap.min.css')
        link(rel="stylesheet", href="/javascripts/angular-chart.js/dist/angular-chart.css")
        link(rel='stylesheet', href='/stylesheets/dashboard.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body(ng-controller='menuCtrl')
        nav.navbar.navbar-inverse.navbar-fixed-top
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Peekaboo
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-left
                    li(ng-repeat='item in menuItemsSide' ng-class="{active : activeMenu === item.menuName}")
                        a(ng-href="{{item.menuLinks}}" ng-click="setActive(item.menuName)") {{ item.menuName }}
                ul.nav.navbar-nav.navbar-right
                    li(ng-repeat='item in menuItemsTop')
                        a(ng-href='{{item.menuLinks}}') {{ item.menuName }}
                form.navbar-form.navbar-right
                    input.form-control(type='text', placeholder='Search...')

        div(ng-view)
            block content
        //
          Bootstrap core JavaScript
          ==================================================
        // Placed at the end of the document so the pages load faster
        script(type="text/javascript" src="/javascripts/jquery.min.js")
        script(type="text/javascript" src="/javascripts/angular/angular.js")
        script(type="text/javascript" src="/javascripts/angular/angular-route.js")
        script(type="text/javascript" src="/javascripts/angular/angular-resource.js")
        script(type="text/javascript" src="/javascripts/angular/angular-sanitize.js")
        script(type="text/javascript" src="/javascripts/ui.router/angular-ui-router.js")
        script(type="text/javascript" src="/javascripts/angular-smart-table/smart-table.js")
        script(type="text/javascript" src="/javascripts/ui.bootstrap/ui-bootstrap-tpls.js")
        script(type="text/javascript" src="/javascripts/Chart.js/Chart.js")
        script(type="text/javascript" src="/javascripts/angular-chart.js/dist/angular-chart.js")
        script(type="text/javascript" src="/javascripts/ng-csv/build/ng-csv.js")
        script(type="text/javascript" src="/javascripts/dirPagination.js")
        script(type="text/javascript" src="/javascripts/ngApp.js")
        script(type='text/javascript' src="/javascripts/directives/tabset.js")
        script(type='text/javascript' src="/javascripts/controllers/menuCtrl.js")
        script(type='text/javascript' src="/javascripts/controllers/overviewCtrl.js")
        script(type='text/javascript' src="/javascripts/controllers/instanceCtrl.js")
        script(type='text/javascript' src="/javascripts/controllers/networkCtrl.js")
        script(type='text/javascript' src="/javascripts/controllers/tabsetCtrl.js")
        script(type='text/javascript' src="/javascripts/Filters/filter.js")
        script(type='text/javascript' src="/javascripts/ngRoutes/mainRoutes.js")
